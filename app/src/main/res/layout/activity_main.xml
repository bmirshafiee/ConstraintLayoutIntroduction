<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/germany"
            android:id="@+id/imageView1" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/image_view_description" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <Button
            android:text="@string/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/button"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintVertical_bias="0.22000003"
            android:contentDescription="@string/image_view_two_description"
            app:layout_constraintStart_toEndOf="@+id/textView6"/>
    <TextView
            android:text="@string/country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:layout_marginBottom="21dp" app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="201dp" android:layout_marginRight="201dp"/>
    <TextView
            android:text="@string/location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText3" style="@style/text_view_style_two"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="@string/first_edit_text_hint" app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/editText4"
            app:layout_constraintStart_toEndOf="@+id/barrier" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="@string/edit_text_town" app:layout_constraintTop_toBottomOf="@+id/editText3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView9"
            android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            app:layout_constraintStart_toEndOf="@+id/barrier" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="@string/about"
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:id="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginBottom="64dp" app:layout_constraintStart_toStartOf="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/text_view_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText4" style="@style/text_view_style_two"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"/>
    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="end"
                                        app:constraint_referenced_ids="textView7,textView8"/>
</android.support.constraint.ConstraintLayout>